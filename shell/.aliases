#!/bin/sh

# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias d="dirs -v | head -10"

# Shortcuts
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/Dev/Projects"
alias g="git"
alias h="history"
alias gc=". /usr/local/bin/gitdate && git commit -v "

# Old habits
alias cls="clear"

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
    colorflag="--color"
else # OS X `ls`
    colorflag="-G"
fi

# List all files colorized in long format
alias ls="ls ${colorflag} -lhart"

# List only directories
alias lsd="ls -lhF ${colorflag} | grep --color=never '^d'"

# apt
alias apt-update="sudo apt update && sudo apt upgrade"

# Always enable colored `grep` output
# Note: `GREP_OPTIONS="--color=auto"` is deprecated, hence the alias usage.
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# IP addresses
alias ipp="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# File/Directory
alias mkdir="mkdir -pv"
alias df="df -H"
alias diff="colordiff"
alias dir="dir ${colorflag}"
alias vdir="vdir ${colorflag}"

# Process
alias psx="ps -auxw Â¦ grep $1"

# Network
# Stop after sending count ECHO_REQUEST packets #
alias ping="ping -c 5"
# Do not wait interval 1 second, go fast #
alias fastping="ping -c 100 -s.2"
alias ports="netstat -tulanp"

# reboot / halt / poweroff
alias reboot="sudo /sbin/reboot"
alias poweroff="sudo /sbin/poweroff"
alias halt="sudo /sbin/halt"
alias shutdown="sudo /sbin/shutdown"

# File/Group Permissions
# Parenting changing perms on / #
alias chown="chown --preserve-root"
alias chmod="chmod --preserve-root"
alias chgrp="chgrp --preserve-root"

# System Information
# pass options to free
alias meminfo="free -m -l -t"

# get top process eating memory
alias psmem="ps auxf | sort -nr -k 4"
alias psmem10="ps auxf | sort -nr -k 4 | head -10"

# get top process eating cpu
alias pscpu="ps auxf | sort -nr -k 3"
alias pscpu10="ps auxf | sort -nr -k 3 | head -10"

# Get server cpu info
alias cpuinfo="lscpu"

# get GPU ram on desktop / laptop
alias gpumeminfo="grep -i --color memory /var/log/Xorg.0.log"

# Show human friendly numbers
alias df="df -h"
alias du="du -h -d 2"

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Date/Time
alias now='date +"%T"'
alias nowtime="now"
alias nowdate='date +"%m-%d-%Y"'
# Get week number
alias week="date +%V"
alias ts="date +%Y%m%d"

# OS X has no `md5sum`, so use `md5` as a fallback
command -v md5sum > /dev/null || alias md5sum="md5"

# OS X has no `sha1sum`, so use `shasum` as a fallback
command -v sha1sum > /dev/null || alias sha1sum="shasum"

# Trim new lines and copy to clipboard
# Used in a pipe. Not sure why I'd want to remove the newlines, tho
# alias c="tr -d '\\n' | xclip -selection clipboard"
alias c="xsel -ib"

# URL-encode strings
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'

# Pipe my public key to my clipboard.
if grep -q Microsoft /proc/version; then
	alias pubkey="clip.exe < ~/.ssh/id_rsa.pub | echo '=> Public key copied to pasteboard.'"
else
    alias pubkey="more ~/.ssh/id_rsa.pub | xclip -selection clipboard | echo '=> Public key copied to pasteboard.'"
fi

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

# git add & commit in one shot
alias gac="git add . && git commit -a -m "

# search through terminal history
alias hs="history | grep"

# See set
# View environment variables
alias seet="set | less"

# Show custom functions (probably on in zsh)
alias funcs="print -l ${(ok)functions} | less"
